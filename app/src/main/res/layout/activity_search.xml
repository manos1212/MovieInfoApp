    <TextView
        android:padding="5dp"

        android:id="@+id/search_movie_list_title"
        android:layout_width="wrap_content"
        tools:text="Horror"
        android:textSize="22sp"
        android:elevation="11dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/textField_Search_layout"
        app:layout_constraintStart_toStartOf="@+id/searchForMovies_recycler_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchForMovies_recycler_view"
        android:layout_width="match_parent"
        android:scrollbarThumbVertical="@color/white"
        android:scrollbars="vertical"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_movie_list_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        tools:listitem="@layout/holder_search_single_movie"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>